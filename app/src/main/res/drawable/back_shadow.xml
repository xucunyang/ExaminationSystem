<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:left="3dp"
        android:top="3dp">
        <shape>
            <solid android:color="#55000000" />

            <corners android:radius="9dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="2dp"
        android:right="1dp"
        android:top="2dp">
        <shape>
            <solid android:color="#88000000" />

            <corners android:radius="9dp" />
        </shape>
    </item>
    <item
        android:bottom="3dp"
        android:right="3dp">
        <shape>
            <solid android:color="@color/white" />

            <stroke
                android:width="1dp"
                android:color="#8090d0" />

            <corners android:radius="8dp" />
        </shape>
    </item>

</layer-list>