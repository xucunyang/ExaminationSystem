<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/banner2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ScrollView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@color/light_green"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="wp"
                            android:textSize="30sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="15dp"
                            android:text="多元智能综合评价"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <TextView
                        style="@style/menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="showSubSelectFragment"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="多元智能主观评价"
                        android:textSize="25sp" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="showObjSelectFragment"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="多元智能客观评价"
                        android:textSize="25sp" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_green"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="多元智能评价报告"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="showReportFragment"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="多元智能评价报告"
                        android:textSize="25sp" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/light_green"
                        android:gravity="center"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="系统管理"
                        android:textColor="@color/white"
                        android:textSize="22sp" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="showModifyInfo"
                        android:paddingTop="@dimen/dp_10"
                        android:paddingBottom="@dimen/dp_10"
                        android:text="系统管理"
                        android:textSize="25sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/light_green" />

                    <TextView
                        style="@style/menu_item"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:onClick="onFinish"
                        android:text="退出"
                        android:textSize="25sp" />
                </LinearLayout>
            </ScrollView>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingStart="@dimen/dp_10" />
        </LinearLayout>
    </LinearLayout>

</layout>